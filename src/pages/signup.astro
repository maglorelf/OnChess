---
import Base from "@layouts/Base.astro";
import SigninSlider from "@layouts/function-components/SigninSlider.jsx";
import RegisterForm from "@layouts/function-components/RegisterForm.jsx";
---

<Base>
  <section>
    <div class="container max-w-full">
      <div class="row">
        <div class="min-h-[980px] bg-white py-10 lg:col-6 lg:py-[114px]">
          <div class="mx-auto w-full max-w-[480px]">
            <img class="mb-8" src="/images/logo-on-chess-text.png" alt="OnChess Logo" />
            <h1 class="mb-4">Sign Up</h1>
            <p>Create your OnChess account to access our chess courses and resources</p>
            
            <RegisterForm client:load />
          </div>
        </div>
        <SigninSlider
          client:load
          title="Start your chess journey<br />with OnChess today"
        />
      </div>
    </div>
  </section>
</Base>
